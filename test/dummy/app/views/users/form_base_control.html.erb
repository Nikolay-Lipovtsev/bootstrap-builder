<%= bootstrap_row_with_col { content_tag :h1, "Bootstrap Forms" } %>
<hr>

<%= bootstrap_row_with_col do %>
	<%= bootstrap_form_for(@user) { |f| f.email_field :email } %>
	<%= bootstrap_form_for(@user) { |f| f.email_field :email, help_block: "It's a help block for this control" } %>
	<%= bootstrap_form_for(@user) { |f| f.email_field :email, icon: "ok" } %>
	<%= bootstrap_form_for(@user, layout: :horizontal) { |f| f.email_field :email } %>
<% end %>